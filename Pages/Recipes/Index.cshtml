@page
@model Final_Project_Nala_s_Table.Pages.Recipes.IndexModel

@{
    ViewData["Title"] = "Recipes";
}

<h2 class="mb-3">Recipes</h2>

<p>
    <a class="btn btn-success" asp-page="Create">Create New Recipe</a>
</p>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <input class="form-control" name="Search" value="@Model.Search" placeholder="Search title or ingredient" />
    </div>
    <div class="col-md-3">
        <select class="form-select" name="CategoryID">
            <option value="">All categories</option>
            @foreach (var c in Model.CategoryOptions)
            {
                <option value="@c.id" selected="@(Model.CategoryID == c.id ? "selected" : null)">@c.name</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <input class="form-control" type="number" name="MaxPrep" value="@(Model.MaxPrep?.ToString())" placeholder="Max prep (min)" />
    </div>
    <div class="col-md-2">
        <select class="form-select" name="Sort">
            <option value="newest" selected="@(Model.Sort=="newest" ? "selected" : null)">Newest</option>
            <option value="rating" selected="@(Model.Sort=="rating" ? "selected" : null)">Rating</option>
            <option value="preptime" selected="@(Model.Sort=="preptime" ? "selected" : null)">Prep time</option>
        </select>
    </div>
    <div class="col-md-1 d-grid">
        <button class="btn btn-primary" type="submit">Apply</button>
    </div>
</form>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
@foreach (var item in Model.Items)
{
    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text mb-1">
                    <span class="badge bg-secondary">@item.CategoryName</span>
                </p>
                <p class="card-text">
                    <strong>Prep:</strong> @item.PrepTime min
                    &nbsp;|&nbsp;
                    <strong>Cook:</strong> @item.CookTime min
                    &nbsp;|&nbsp;
                    <strong>Rating:</strong> @(item.AvgRating.ToString("0.0"))
                    <a asp-page="./Edit" asp-route-id="@item.RecipeID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.RecipeID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.RecipeID">Delete</a>
                </p>
            </div>
            <div class="card-footer bg-white">
                <a class="btn btn-outline-primary btn-sm" asp-page="Details" asp-route-id="@item.RecipeID">View</a>
            </div>
        </div>
    </div>
}
</div>

<nav class="mt-3">
    <ul class="pagination">
        <li class="page-item @(Model.PageIndex <= 1 ? "disabled" : "")">
            <a class="page-link"
               href="@(Url.Page(null, new { Search=Model.Search, CategoryID=Model.CategoryID, MaxPrep=Model.MaxPrep, Sort=Model.Sort, Page=Model.PageIndex-1 }))">
               Prev
            </a>
        </li>
        <li class="page-item disabled">
            <span class="page-link">Page @Model.PageIndex of @Model.TotalPages</span>
        </li>
        <li class="page-item @(Model.PageIndex >= Model.TotalPages ? "disabled" : "")">
            <a class="page-link"
               href="@(Url.Page(null, new { Search=Model.Search, CategoryID=Model.CategoryID, MaxPrep=Model.MaxPrep, Sort=Model.Sort, Page=Model.PageIndex+1 }))">
               Next
            </a>
        </li>
    </ul>
</nav>
